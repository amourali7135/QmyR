<p class="card-text row align-items-center justify-content-center pt-2">
<% if @personal.photo? %><%= cl_image_tag @personal.photo, height: 150, width: 180, crop: :fill, class: "img-raised rounded-circle img-fluid show-photos" %></p>
<% end %>
<% if %>
<p class="card-text row align-items-center justify-content-center">
<% if @personal.first_name? && @personal.last_name? %><strong><%= @personal.first_name %> <%= @personal.last_name %></strong></p>
<%# end %>
