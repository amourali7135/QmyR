<div class="row align-items-center justify-content-center py-3">
<h2>Your Wallet</h2>
</div>

<div class="container-small mb-3">
<div class="row align-items-center justify-content-center py-3">
 <%= simple_form_for :search, url: wallet_path, method: "GET" do |f| %>
    <%= f.input :search, id:"artist_city2", required: false %>
    <%= link_to "Reset", wallet_path, placeholder: "Search contacts..."  %>
    <%= f.submit 'Submit', class: 'btn btn-danger'%>
  <% end %>
    </div>
</div>

<div class="container-small">
<div class="row align-items-center justify-content-center py-2">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Personal Contacts</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Business Contacts</a>
  </li>
</ul>
</div>


<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
  <div class="row align-items-center justify-content-center">
  <p>You have <%= @personals.size %> personal contacts!</p>
  </div>
    <% @personals.each do |personal| %>
      <div class=" row align-items-center justify-content-center">
        <div class="col-sm-6 pb-2">
          <%= render partial: 'shared/personal_wallet_card', locals: {personal: personal} %>
        </div>
      </div>
    <% end %>
  </div>



  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
  <div class="row align-items-center justify-content-center">
  <p>You have <%= @businesses.size %> business contacts!</p>
  </div>
    <% @businesses.each do |business| %>
      <div class="row align-items-center justify-content-center">
        <div class="col-sm-6 pb-2">
          <%= render partial: 'shared/business_wallet_card', locals: {business: business} %>
        </div>
      </div>
    <% end %>
  </div>
</div>


</div>
